<p id="notice"><%= notice%></p>
<fieldset>
<table align="center">
	<thead>
		<tr>
			<th>Name</th>
		</tr>
	</thead>

	<tbody>
		<% @books.each do |book|%>
		<tr>
			<td><%= book.name %></td>
			<td><%= link_to "Show", book %></td>
			<% if current_user.has_role? :admin || current_user.id == book.user_id %>

			<td><%= link_to "Edit", edit_book_path(book) %></td>
			<td><%= link_to "delete", book, method: :delete,data: { confirm: 'Are you sure?' }%></td>
			<%end%>

		</tr>
		<%end%>
	</tbody>
</table>
<% if current_user.has_role? :author or current_user.has_role? :admin %>
<fieldset align="center"><p align="center"><%= link_to "New Book", new_book_path%></p></fieldset>
<%end%>


<fieldset align="center">
	<p align="center"><%= link_to "Back", root_path%></p>
</fieldset>